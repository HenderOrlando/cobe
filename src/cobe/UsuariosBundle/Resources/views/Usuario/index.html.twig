{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuario list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Clave</th>
                <th>Salt</th>
                <th>Email</th>
                <th>Token</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuarios_usuario_show', { 'id': entity.id }) }}">{{ entity.clave }}</a></td>
                <td>{{ entity.salt }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.token }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('usuarios_usuario_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usuarios_usuario_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usuarios_usuario_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
