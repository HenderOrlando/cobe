{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Archivo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Url</th>
                <th>Fullurl</th>
                <th>Size</th>
                <th>Ext</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('colecciones_archivo_show', { 'id': entity.id }) }}">{{ entity.url }}</a></td>
                <td>{{ entity.fullUrl }}</td>
                <td>{{ entity.size }}</td>
                <td>{{ entity.ext }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('colecciones_archivo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('colecciones_archivo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('colecciones_archivo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
